@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<UserService.Models.AccountViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <nav class="nav d-flex bg-dark bg-gradient sticky-top align-items-end">
        <div class="p-2 mx-3">
            <h1 class="text-info text-end">ManasForum</h1>
        </div>
        <div class="flex-fill">
        @using (Html.BeginForm("FindQuestions", "Home", FormMethod.Post))
        {
        <div class="d-flex flex-fill">
            <div class="d-flex align-items-end w-50 mx-auto flex-fill" >
                <div class="input-group m-1 mx-5 w-100">
                    <input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="button-addon2">
                    <button class="btn btn-primary" type="button" id="button-addon2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                        </svg>
                    </button>
                </div>
            </div>

            <div class="d-flex align-items-end flex-row-reverse">
                <a class="btn btn-outline-warning m-1" role="button" asp-controller="User" asp-action="LogOut">Log out</a>
                <a class="btn btn-outline-success m-1 fw-bold" onclick="ToggleForm()" role="button">Ask a question</a>
            </div>
        </div>
        }
        </div>
    </nav>

    <nav class="float-start nav align-items-center flex-column bg-dark bg-gradient me-1" style="width: 15%; height: 2000px;">
       <div class="position-fixed">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" asp-action="Index">Main Page</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Members">Members</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="MyQuestions">My Questions</a>
            </li>
        </div>
    </nav>


    <table class="float-start w-75 m-3 border table">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Role</th>
                <th scope="col">Department</th>
                <th scope="col">Year</th>
                <th scope="col">Answers</th>
                <th scope="col">Questions</th>
                <th scope="col">Activity Score</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th class="table-info" scope="row">@item.Account.Id</th>
                <th class="table-info" scope="col">@item.Account.Fullname</th>
                <th class="table-info" scope="col">@item.Account.Role</th>
                <th class="table-info" scope="col">@item.Account.Department</th>
                <th class="table-info" scope="col">@item.Account.Years-year</th>
                <th class="table-success" scope="col">@item.AnswersCount</th>
                <th class="table-danger" scope="col">@item.QuestionCounts</th>
                <th class="table-primary" scope="col">@item.Activity</th>
            </tr>
        }
        </tbody>
    </table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>